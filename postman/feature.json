		{
			"name": "Добавление новой локации успешное",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Ответ должен содержать код статуса 201 и данные в формате json\", function () {\r",
							"    pm.response.to.have.status(201);   \r",
							"    pm.response.to.be.withBody;\r",
							"    pm.response.to.be.json;\r",
							"});\r",
							"\r",
							"const target = pm.response.json();\r",
							"const source = JSON.parse(pm.request.body.raw);\r",
							"\r",
							"pm.collectionVariables.set(\"location_id\", target.id);\r",
							"\r",
							"var query = {};\r",
							"pm.request.url.query.all().forEach((param) => { query[param.key] = param.value});\r",
							"\r",
							"pm.test(\"Запрос на локацию должен содержать поля: id, lat, lon, radius, name\", function () {\r",
							"pm.expect(target).to.have.property('id');\r",
							"pm.expect(target).to.have.property('lat');\r",
							"pm.expect(target).to.have.property('lon');\r",
							"pm.expect(target).to.have.property('radius');\r",
							"pm.expect(target).to.have.property('name');\r",
							"});\r",
							"\r",
							"\r",
							"pm.test(\"Данные в ответе должны соответствовать данным в запросе\", function () {\r",
							"    pm.expect(target.id).to.not.be.null;\r",
							"    pm.expect(target.lat).equal(parseFloat(source.lat), 'Долгота локации в ответе должна соответствовать долготе локации в запросе');\r",
							"    pm.expect(target.lon).equal(parseFloat(source.lon), 'Широта локации в ответе должна соответствовать широте локации в запросе');\r",
							"    pm.expect(target.radius).equal(parseFloat(source.radius), 'Радиус в ответе должна соответствовать радиусу в запросе');\r",
							"    pm.expect(target.name).equal(source.name, 'Наименование локации в ответе должна соответствовать наименованию локации в запросе');\r",
							"});\r",
							"\r",
							"\r",
							"\r",
							""
						],
